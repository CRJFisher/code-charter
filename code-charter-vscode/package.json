{
  "name": "code-charter-vscode",
  "displayName": "Code Charter",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "publisher": "crjfisher",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:code-charter-vscode.generateDiagram"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-charter-vscode.generateDiagram",
        "title": "Code Charter: Summarise Code Trees With A Diagram"
      }
    ],
    "configuration": {
      "title": "Code Charter",
      "properties": {
        "code-charter-vscode.modelProvider": {
          "order": 1,
          "type": "string",
          "default": "Ollama",
          "enum": [
            "Ollama",
            "OpenAI"
          ],
          "description": "Select language model provider for code summarization"
        },
        "code-charter-vscode.APIKey": {
          "order": 2,
          "type": "string",
          "default": null,
          "description": "(if required) API key for language model provider"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/d3-graphviz": "^2.6.10",
    "@types/mocha": "^10.0.7",
    "@types/node": "^18.19.26",
    "@types/pouchdb": "^6.4.2",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^3.10.1",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^8.56.0",
    "mocha": "^10.7.3",
    "typescript": "^5.4.5",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@langchain/anthropic": "^0.1.9",
    "@langchain/community": "^0.2.17",
    "@langchain/google-vertexai": "^0.0.5",
    "@vscode/python-extension": "^1.0.5",
    "d3": "^7.9.0",
    "d3-graphviz": "^5.4.0",
    "langchain": "^0.1.30",
    "mocha-explorer-launcher-scripts": "^0.4.0",
    "pouchdb": "^8.0.1",
    "pouchdb-upsert": "^2.2.0",
    "ts-graphviz": "^2.1.2"
  }
}
