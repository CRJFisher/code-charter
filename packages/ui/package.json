{
  "name": "@code-charter/ui",
  "version": "0.0.1",
  "description": "Code Charter UI components",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:lib": "tsup --config tsup.config.ts --no-config",
    "build:standalone": "tsup --config tsup.config.ts --no-config",
    "dev": "tsup --watch",
    "dev:standalone": "NODE_ENV=development tsup --watch",
    "dev:server": "http-server dist -p 3000 --cors -c-1",
    "dev:all": "concurrently \"npm run dev:standalone\" \"npm run dev:server\"",
    "debug": "tsx --inspect=9229 src/debug-entry.tsx",
    "debug:watch": "tsx watch --inspect=9229 src/debug-entry.tsx",
    "lint": "eslint src --ext ts,tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@ariadnejs/core": "^0.5.18",
    "@code-charter/types": "^0.0.1",
    "@xyflow/react": "^12.8.2",
    "elkjs": "^0.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "http-server": "^14.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
