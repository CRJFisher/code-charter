{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"outDir": "out",
		"lib": [
			"ES2022"
		],
		"esModuleInterop": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@shared/*": [
				"shared/*"
			]
		},
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
	},
	"include": [
		"src/**/*",
		"shared/**/*"
	],
	"exclude": [
		"web"
	]
}