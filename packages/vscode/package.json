{
  "name": "@code-charter/vscode",
  "displayName": "Code Charter",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "publisher": "crjfisher",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:code-charter-vscode.generateDiagram"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-charter-vscode.generateDiagram",
        "title": "Code Charter: Summarise Code Trees With A Diagram"
      },
      {
        "command": "code-charter-vscode.configureClusterEmbeddings",
        "title": "Code Charter: Configure Cluster Embeddings"
      }
    ],
    "configuration": {
      "title": "Code Charter",
      "properties": {
        "code-charter-vscode.modelProvider": {
          "order": 1,
          "type": "string",
          "default": "Ollama",
          "enum": [
            "Ollama",
            "OpenAI"
          ],
          "description": "Select language model provider for code summarization"
        },
        "code-charter-vscode.APIKey": {
          "order": 2,
          "type": "string",
          "default": null,
          "description": "(if required) API key for language model provider"
        },
        "code-charter-vscode.embeddingProvider": {
          "order": 3,
          "type": "string",
          "default": null,
          "enum": [
            "local",
            "openai"
          ],
          "enumDescriptions": [
            "Use local embeddings (90MB model download, no API key required)",
            "Use OpenAI embeddings (requires API key)"
          ],
          "description": "Select embedding provider for clustering. If not set, will prompt on first use."
        },
        "code-charter-vscode.devMode": {
          "order": 4,
          "type": "boolean",
          "default": false,
          "description": "Enable development mode to load UI from dev server"
        },
        "code-charter-vscode.devServerUrl": {
          "order": 5,
          "type": "string",
          "default": "http://localhost:3000",
          "description": "URL of the UI development server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "compile": "tsc -p ./",
    "dev": "tsc -watch -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf out"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.26",
    "@types/pouchdb": "^6.4.2",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.62.0",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.4.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@ariadnejs/core": "^0.5.18",
    "@ariadnejs/types": "^0.5.15",
    "@code-charter/types": "^0.0.1",
    "@code-charter/ui": "^0.0.1",
    "@huggingface/transformers": "^3.7.1",
    "@langchain/anthropic": "^0.1.9",
    "@langchain/google-vertexai": "^0.0.5",
    "@langchain/ollama": "^0.1.3",
    "@langchain/openai": "^0.0.34",
    "@tensorflow/tfjs-node": "^4.10.0",
    "@vscode/python-extension": "^1.0.5",
    "@xenova/transformers": "^2.17.2",
    "clustering-tfjs": "^0.1.0",
    "langchain": "^0.3.6",
    "openai": "^4.0.0",
    "pouchdb": "^8.0.1",
    "pouchdb-upsert": "^2.2.0"
  }
}
